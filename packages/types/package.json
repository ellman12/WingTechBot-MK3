{
    "name": "@wingtechbot-mk3/types",
    "version": "1.0.0",
    "description": "Shared TypeScript types for WingTechBot MK3 API",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "type": "module",
    "scripts": {
        "build": "tsc && node scripts/generate-exports.js",
        "dev": "tsc --watch",
        "clean": "rimraf dist"
    },
    "dependencies": {
        "zod": "^4.1.12"
    },
    "devDependencies": {
        "rimraf": "^6.0.1"
    },
    "files": [
        "dist"
    ],
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        },
        "./api/v1/users": {
            "types": "./dist/api/v1/users.d.ts",
            "import": "./dist/api/v1/users.js"
        },
        "./common/api": {
            "types": "./dist/common/api.d.ts",
            "import": "./dist/common/api.js"
        },
        "./common/error": {
            "types": "./dist/common/error.d.ts",
            "import": "./dist/common/error.js"
        }
    }
}
