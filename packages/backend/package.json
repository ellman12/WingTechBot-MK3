{
    "name": "backend",
    "version": "1.0.0",
    "description": "ExpressJS TypeScript backend with Discord bot functionality following hexagonal architecture",
    "main": "dist/src/main.js",
    "type": "module",
    "scripts": {
        "predev": "docker compose -f docker-compose.db.yaml up -d",
        "dev": "tsx watch src/main.ts",
        "build": "tsc && tsc-alias -p tsconfig.json --resolve-full-extension .js",
        "start": "node dist/src/main.js",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest --coverage",
        "test:ci": "CI=true vitest run",
        "typecheck": "tsc --noEmit",
        "db:setup": "tsx -r @dotenvx/dotenvx/config scripts/setup-database.ts",
        "db:generate": "tsx -r @dotenvx/dotenvx/config scripts/generate-types.ts",
        "db:migrate": "tsx -r @dotenvx/dotenvx/config scripts/run-migrations.ts",
        "db:migrate:rollback": "tsx -r @dotenvx/dotenvx/config scripts/rollback-migrations.ts",
        "docker:up": "dotenvx run -- docker compose -f docker-compose.dev.yaml up --build",
        "docker:up:detached": "docker compose -f docker-compose.dev.yaml up --build -d",
        "docker:down": "docker compose -f docker-compose.dev.yaml down",
        "docker:down:volumes": "docker compose -f docker-compose.dev.yaml down -v",
        "docker:logs": "docker compose -f docker-compose.dev.yaml logs -f",
        "docker:restart": "docker compose -f docker-compose.dev.yaml restart",
        "docker:clean": "docker compose -f docker-compose.dev.yaml down -v --remove-orphans && docker system prune -f"
    },
    "dependencies": {
        "@asteasolutions/zod-to-openapi": "8.1.0",
        "@discordjs/opus": "^0.10.0",
        "@discordjs/voice": "^0.19.0",
        "@dotenvx/dotenvx": "^1.51.0",
        "@google/genai": "^1.25.0",
        "@wingtechbot-mk3/types": "workspace:*",
        "compression": "^1.8.1",
        "cors": "^2.8.5",
        "discord.js": "^14.23.2",
        "express": "^5.1.0",
        "fast-deep-equal": "^3.1.3",
        "helmet": "^8.1.0",
        "kysely": "^0.28.8",
        "kysely-codegen": "^0.19.0",
        "libsodium": "^0.7.15",
        "mime": "^4.1.0",
        "morgan": "^1.10.1",
        "opusscript": "^0.1.1",
        "pg": "^8.16.3",
        "sodium-native": "^5.0.9",
        "swagger-ui-express": "^5.0.1",
        "zod": "^4.1.12",
        "zod-openapi": "^5.4.3"
    },
    "devDependencies": {
        "@snazzah/davey": "^0.1.7",
        "@types/compression": "^1.8.1",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.3",
        "@types/morgan": "^1.9.10",
        "@types/node": "^24.8.0",
        "@types/pg": "^8.15.5",
        "@types/swagger-ui-express": "^4.1.8",
        "@vitest/ui": "^3.2.4",
        "nodemon": "^3.1.10",
        "pg-mem": "^3.0.5",
        "ts-node": "^10.9.2",
        "tsc-alias": "^1.8.16",
        "tsx": "^4.20.6",
        "vitest": "^3.2.4"
    }
}
