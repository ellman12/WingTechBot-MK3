{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "allowJs": true,
        "checkJs": false,
        "outDir": "./dist",
        "rootDir": ".",
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noUncheckedIndexedAccess": true,
        "exactOptionalPropertyTypes": true,
        "noImplicitOverride": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "removeComments": false,
        "newLine": "lf",
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "baseUrl": ".",
        "paths": { "@/*": ["src/*"], "@core/*": ["src/core/*"], "@infrastructure/*": ["src/infrastructure/*"], "@application/*": ["src/application/*"], "@adapters/*": ["src/adapters/*"] },
        "types": ["node", "vitest/globals"],
        "lib": ["ES2022"]
    },
    "include": ["src/**/*", "tests/**/*"],
    "exclude": ["node_modules", "dist", "coverage", "*.config.js", "*.config.ts"],
    "ts-node": { "esm": true, "experimentalSpecifierResolution": "node" }
}
