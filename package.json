{
    "name": "wingtechbot-mk3-monorepo",
    "version": "1.0.0",
    "description": "WingTechBot MK3 monorepo with backend and frontend",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "pnpm --filter backend dev",
        "dev:frontend": "pnpm --filter frontend dev",
        "dev:all": "pnpm --parallel dev dev:frontend",
        "build": "pnpm --recursive build",
        "build:backend": "pnpm --filter backend build",
        "build:frontend": "pnpm --filter frontend build",
        "build:types": "pnpm --filter types build",
        "test": "pnpm --recursive test",
        "test:backend": "pnpm --filter backend test",
        "test:frontend": "pnpm --filter frontend test",
        "lint": "pnpm --recursive lint",
        "lint:fix": "pnpm --recursive lint:fix",
        "format": "pnpm --recursive format",
        "format:check": "pnpm --recursive format:check",
        "clean": "pnpm -r clean",
        "db:generate": "pnpm --filter backend db:generate",
        "db:push": "pnpm --filter backend db:push",
        "db:studio": "pnpm --filter backend db:studio",
        "db:migrate": "pnpm --filter backend db:migrate",
        "discord:deploy-commands": "pnpm --filter backend discord:deploy-commands",
        "docker:build": "docker build -t wingtechbot-mk3 -f packages/backend/Dockerfile .",
        "docker:run": "docker run --name wingtechbot-mk3 --rm -p 3000:3000 --add-host=host.docker.internal:host-gateway --env-file packages/backend/.env -e DATABASE_URL=postgresql://wingtechbot:wingtechbot_password@host.docker.internal:5433/wingtechbot wingtechbot-mk3",
        "docker:up": "pnpm --filter backend docker:up",
        "docker:up:detached": "pnpm --filter backend docker:up:detached",
        "docker:down": "pnpm --filter backend docker:down",
        "docker:down:clean": "pnpm --filter backend docker:down:volumes",
        "docker:logs": "pnpm --filter backend docker:logs",
        "docker:restart": "pnpm --filter backend docker:restart",
        "docker:clean": "pnpm --filter backend docker:clean",
        "docker:db": "pnpm --filter backend docker:up postgres database-init && echo '🗄️ Database is ready at postgresql://wingtechbot:wingtechbot_password@localhost:5432/wingtechbot'",
        "docker:full-reset": "pnpm --filter backend docker:clean && pnpm docker:up",
        "dev:docker": "pnpm docker:up:detached && pnpm dev",
        "dev:with-db": "pnpm docker:db && pnpm dev",
        "docs:dev": "pnpm --filter docs dev",
        "docs:build": "pnpm --filter docs build",
        "docs:preview": "pnpm --filter docs preview",
        "prepare": "husky"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ellman12/WingTechBot-MK3.git"
    },
    "keywords": [
        "monorepo",
        "expressjs",
        "react",
        "typescript",
        "discord",
        "bot",
        "vite",
        "tailwind"
    ],
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/ellman12/WingTechBot-MK3/issues"
    },
    "homepage": "https://github.com/ellman12/WingTechBot-MK3#readme",
    "engines": {
        "node": ">=18.0.0"
    },
    "pnpm": {
        "overrides": {
            "prismjs": ">=1.30.0"
        },
        "neverBuiltDependencies": []
    },
    "devDependencies": {
        "@eslint/js": "^9.30.1",
        "@trivago/prettier-plugin-sort-imports": "^5.2.2",
        "@typescript-eslint/eslint-plugin": "^8.36.0",
        "@typescript-eslint/parser": "^8.36.0",
        "eslint": "^9.30.1",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.20",
        "globals": "^16.3.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.1.2",
        "prettier": "^3.6.2",
        "prettier-plugin-tailwindcss": "^0.6.14",
        "typescript-eslint": "^8.36.0"
    },
    "dependencies": {
        "fast-deep-equal": "^3.1.3",
        "pg-mem": "^3.0.5"
    }
}
